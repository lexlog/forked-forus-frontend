.app.app-container
    menu
    section.app.app-content
        .block.block-breadcrumbs
            .breadcrumb-item(ui-sref="reservations({organization_id: $ctrl.organization.id})") Reservations 
            .breadcrumb-item.active Reservation Settings Page

        .card: form(ng-submit="$ctrl.form.submit()").form
            .card-header.flex.flex-horizontal
                .flex.flex-grow: .card-title(i18n="reservation_settings.header.title")
                .flex
                    button(type="submit" translate="reservation_settings.buttons.confirm").button.button-primary.button-sm

            .card-section.card-section-primary.card-section-settings
                .card-title(translate="reservation_settings.labels.phone")
                
                .row
                    .form-group.col.col-lg-6.col-xs-12
                        label(for="reservation_phone").form-label
                        select(
                            id="reservation_phone"
                            ng-model="$ctrl.form.values.reservation_phone" 
                            ng-options="field.value as field.label for field in $ctrl.reservationFieldOptions").form-control

        
            .card-section.card-section-primary.card-section-settings
                .card-title(translate="reservation_settings.labels.address")
                
                .row
                    .form-group.col.col-lg-6.col-xs-12
                        label(for="reservation_address").form-label
                        select(
                            id="reservation_address"
                            ng-model="$ctrl.form.values.reservation_address" 
                            ng-options="field.value as field.label for field in $ctrl.reservationFieldOptions").form-control
            
            .card-section.card-section-primary.card-section-settings
                .card-title(translate="reservation_settings.labels.birth_date")
                
                .row
                    .form-group.col.col-lg-6.col-xs-12
                        label(for="reservation_requester_birth_date").form-label
                        select(
                            id="reservation_requester_birth_date"
                            ng-model="$ctrl.form.values.reservation_requester_birth_date" 
                            ng-options="field.value as field.label for field in $ctrl.reservationFieldOptions").form-control                   

            //- Cancel or Submit
            .card-section.card-section-primary: .text-center
                button(
                    type="button"
                    ui-sref="reservations({organization_id: $ctrl.organization.id})"
                    translate="reservation_settings.buttons.cancel").button.button-default

                button(
                    type="submit" 
                    translate="reservation_settings.buttons.confirm").button.button-primary
