.card
    .card-header: .flex
        .flex.flex-grow: .card-title
            span(translate="fund_unsubscriptions.title")
            span.span-count
                | {{ $dir.items.meta.total }}

        .block.block-inline-filters
            .flex-col: .block.block-label-tabs.nowrap: .label-tab-set
                .label-tab.label-tab-sm(
                    ng-class="{'active' : $dir.shownType == 'all'}" 
                    ng-click="$dir.filterByType('all')")
                    | Alle
                .label-tab.label-tab-sm(
                    ng-class="{'active' : $dir.shownType == 'pending'}" 
                    ng-click="$dir.filterByType('pending')")
                    | In afwachting
                .label-tab.label-tab-sm(
                    ng-class="{'active' : $dir.shownType == 'approved'}" 
                    ng-click="$dir.filterByType('approved')")
                    | Goedgekeurd
                .label-tab.label-tab-sm(
                    ng-class="{'active' : $dir.shownType == 'canceled'}" 
                    ng-click="$dir.filterByType('canceled')")
                    | Geannuleerd
                .label-tab.label-tab-sm(
                    ng-class="{'active' : $dir.shownType == 'expired'}" 
                    ng-click="$dir.filterByType('expired')")
                    | Verlopen

            .button.button-text(ng-if="$dir.filters.show" ng-click="$dir.filters.reset()")
                em.mdi.mdi-close.icon-start
                span(i18n="Wis filters")

            .form(ng-if="!$dir.filters.show"): .form-group: input(
                ng-model="$dir.filters.values.q"
                placeholder="Zoeken").form-control
            
            .form: .inline-filters-dropdown.pull-right(click-outside="$dir.hideFilters()")
                .inline-filters-dropdown-content(ng-show="$dir.filters.show")
                    .arrow-box.bg-dim: .arrow
                    .form
                        .form-group(ng-click="$event.stopPropagation()")
                            form-label-toggle(label="{{ 'transactions.labels.fund' | i18n }}")
                            .form-offset: select-control(
                                prop="key"
                                search="false"
                                ng-model="$dir.filters.values.fund_id"
                                options="$dir.funds").form-control

                        .form-group
                            form-label-toggle(label="{{ 'transactions.labels.from' | i18n }}")
                            datepicker(
                                date-format="yyyy-MM-dd" 
                                datepicker-mobile=""
                                date-week-start-day="1").form-control
                                input(ng-model="$dir.filters.values.from" type="text" placeholder="jjjj-MM-dd").form-control

                        .form-group
                            form-label-toggle(label="{{ 'transactions.labels.from' | i18n }}")
                            datepicker(
                                date-format="yyyy-MM-dd" 
                                datepicker-mobile=""
                                date-week-start-day="1").form-control
                                input(ng-model="$dir.filters.values.to" type="text" placeholder="jjjj-MM-dd").form-control


                .button.button-default.button-icon(ng-click="$dir.filters.show = !$dir.filters.show"): em.mdi.mdi-filter-outline

    //- Unsubscriptions list
    .card-section(ng-if="$dir.items.meta.total > 0")
        .card-block.card-block-table.card-block-table-fund.form
            .table-wrapper
                table.table
                    tr
                        th(width="50px")
                            input-checkbox-control(
                                compact="true"
                                name="all_funds"
                                ng-model="$dir.allSelected"
                                ng-change="$dir.updateAllSelected()")

                        th(translate="fund_unsubscriptions.labels.fund")
                        th(translate="fund_unsubscriptions.labels.organization")
                        th(translate="fund_unsubscriptions.labels.created_at")
                        th(translate="fund_unsubscriptions.labels.unsubscription_date")
                        th(translate="fund_unsubscriptions.labels.note")
                        th(translate="fund_unsubscriptions.labels.status")
                        th(translate="fund_unsubscriptions.labels.actions").nowrap.text-right

                    tr(
                        ng-if="$dir.shownType == 'all' || $dir.shownType == unsubscription.state"
                        ng-repeat="unsubscription in $dir.items.data"
                        ng-class="$dir.selected[unsubscription.id] ? 'selected' : ''")
                        td(width="50px")
                            input-checkbox-control(
                                compact="true"
                                name="checkbox_fund_{{ unsubscription.id }}"
                                ng-model="$dir.selected[unsubscription.id]")
                        td.nowrap
                            .fund-img: img(ng-src="{{ unsubscription.fund_provider.fund.logo.sizes.thumbnail || './assets/img/placeholders/organization-thumbnail.png' }}" alt="")
                            .fund-title(ng-bind="unsubscription.fund_provider.fund.name")

                        td(
                            ng-bind="unsubscription.fund_provider.fund.organization.name | str_limit:25"
                            title="{{ unsubscription.fund_provider.fund.organization.name }}")

                        td.nowrap
                            strong(ng-bind="unsubscription.created_at_locale").text-strong.text-md.text-muted-dark
                        td.nowrap
                            strong(ng-bind="unsubscription.unsubscribe_date_locale").text-strong.text-md.text-muted-dark

                        td(
                            ng-bind="unsubscription.note | str_limit:25"
                            title="{{ unsubscription.note }}") 

                        td.nowrap
                            .tag.tag-sm(
                                ng-class="{'tag-success': unsubscription.state == 'approved', 'tag-warning': unsubscription.state == 'pending', 'tag-danger': unsubscription.is_expired, 'tag-default': unsubscription.state == 'canceled'}" 
                                ng-bind="unsubscription.state")

                        td: .button-group.flex-end
                            //- Cancel unsubscription request
                            .button.button-default.button-icon.pull-right(
                                ng-if="unsubscription.state == 'pending'"
                                ng-click="$dir.cancelUnsubscriptionRequest(unsubscription)")
                                em.mdi.mdi-close-circle-outline.icon-start

    .card(ng-show="$dir.items.meta.last_page > 1"): .card-section
        paginator(meta="$dir.items.meta" filters="$dir.filters.values" count-buttons="5" on-page-change="$dir.onPageChange(query)")

    //- Not found
    .card-section(ng-if="$dir.items.meta.total == 0"): .block.block-empty.text-center
        .empty-title(ng-bind="$dir.emptyBlockText")