a.fund-item
    .fund-photo: img(
        ng-src="{{ $dir.media.sizes.thumbnail || $dir.media.sizes.small || './assets/img/placeholders/fund-thumbnail.png' }}"
        alt="")

    .fund-content
        .fund-details
            .fund-name(ng-bind="$dir.fund.name")
            .fund-description(ng-bind="$dir.fund.description_short")
            .fund-status-label
                .label.label-light(ng-if="$dir.fund.canApply && !$dir.fund.canActivate")
                    span(translate="funds.status.is_applicable")
                .label.label-success(ng-if="$dir.fund.canActivate")
                    span(translate="funds.status.activateable")
                .label.label-primary(ng-if="$dir.fund.alreadyReceived")
                    span(translate="funds.status.active")
                .label.label-warning(ng-if="$dir.fund.isPending")
                    span(translate="funds.status.is_pending")
                .label.label-light(ng-if="!$dir.fund.canActivate && !$dir.fund.canApply && !$dir.fund.isPending && !$dir.fund.isApplicable && !$dir.fund.alreadyReceived")
                    span(translate="funds.status.is_applicable")
